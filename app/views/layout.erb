
<!doctype html>
<html>
  <head>
    <title>FlatCoin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" href="https://assets.coingecko.com/coins/images/12817/small/filecoin.png?1602753933">
  </head>
  <body>
  <!-- Navigation Bar -->
  <% if logged_in? %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="https://assets.coingecko.com/coins/images/12817/small/filecoin.png?1602753933" alt="" width="24" height="24" class="d-inline-block align-top">
        FlatCoin
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/leaderboard">Leaderboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/trade">Trade NOW</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/trades/user">My trades</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/trades">All trades</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/users/balance">Balance</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Add more funds</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% else %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="https://assets.coingecko.com/coins/images/12817/small/filecoin.png?1602753933" alt="" width="24" height="24" class="d-inline-block align-top">
        FlatCoin
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/login">Sign in</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <%end %>

  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>